---
import { IconChevronLeft } from '@tabler/icons-react';
import PortableText from "@/components/PortableText.astro";
import Header from "./Header.astro";
import ButtonLink from '../ButtonLink.astro';

const { title, body, imageUrl, githubUrl, url } = Astro.props;
---

<style lang="scss">
  article {
    margin: 60px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    color: white;
    padding-top: 5rem;

    .wrapper {
      margin: 0 auto;
      max-width: 1000px;
      width: 100%;
      display: flex;
      flex-direction: column;
      justify-content: center;
      gap: 2rem;

      .breadcrumb {
        color: #bfbfbf;
        text-decoration: none;
        font-size: 1rem;
        font-weight: 500;
        margin-bottom: 1rem;
        display: inline-block;
        transition: all 0.2s ease-in-out;

        display: flex;
        align-items: center;
        gap: 0.25rem;

        &:hover {
          color: #f5f5f5;
        }
      }

      .buttons {
        display: flex;
        gap: 1rem;
      }

      main {
        width: 100%;
        margin: 0 auto;
        font-size: 1.2rem;
        color: #e6e6e6;
        line-height: 1.6;
        display: flex;
        flex-direction: column;
        gap: 1rem;
      }
    }
  }
</style>

<article>
  <div class="wrapper">
    <a class="breadcrumb" href="/">
      <IconChevronLeft style={{ width: '1.2rem', height: '1.2rem' }} />
      <span>go back</span>
    </a>

    <Header title={title} imageUrl={imageUrl} />

    <div class="buttons">
      {url && <ButtonLink href={url} target="_blank" icon="external-link" variant="solid">View Project</ButtonLink>}
      {githubUrl && <ButtonLink href={githubUrl} target="_blank" icon="brand-github">See on GitHub</ButtonLink>}
    </div>
    
    <main>
      <PortableText portableText={body} />
    </main>
  </div>
</article>
