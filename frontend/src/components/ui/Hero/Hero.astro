---
import ButtonLink from "../ButtonLink.astro";
import variables from "@/styles/GlobalStyles.module.scss";
import Icons from "./Icons.tsx";

const { downloadLink } = Astro.props;
---

<style define:vars={variables} lang="scss">
  .hero {
    color: var(--gray5);
    margin: 0 60px;
    min-height: 70vh;
    position: relative;
    display: flex;
    flex-direction: column;
    padding-top: 5rem;
  }

  .wrapper {
    margin: 0 auto;
    max-width: 1320px;
    width: 100%;
    height: 100%;
    display: flex;
    flex: 1;
    flex-direction: column;
    justify-content: center;
    position: relative;
    border-bottom: 2px solid var(--gray8);
  }

  .content {
    width: 100%;
    height: 100%;
    max-width: min(50rem, 60%);
    display: flex;
    flex-direction: column;
    justify-content: center;
    margin: 60px 0;
    z-index: 1;
    @media (max-width: 900px) {
      max-width: 100%;
    }
  }

  .title {
    font-size: 4rem;
    line-height: 1;

    #accent {
      color: var(--primary);
    }
  }

  p.description {
    font-size: 1.2rem;
    margin-top: 2rem;
    color: var(--gray6);
  }

  .buttons {
    display: flex;
    margin-top: 1rem;
    flex-direction: row;
    gap: 1rem;
    flex-wrap: wrap;
  }
</style>

<section class="hero" id="about">
  <div class="wrapper">
    <Icons client:only />
    <div class="content">
      <h1 class="title">Hi,</h1>
      <h1 class="title">
        I am <span id="accent">Maciej Kurzak</span>
      </h1>
      <p class="description">
        Junior Frontend Engineer with a passion for building web
        applications using modern technologies such as TypeScript and React
        that loves creativity and problem-solving involved in web
        development, constantly striving to improve skills and learn new
        things.
      </p>
      <div class="buttons">
        <ButtonLink  variant="solid" href="#contact" icon="message-2">
          Get in touch
        </ButtonLink>
        <ButtonLink
          href={downloadLink}
          target="_blank"
          icon="file-download"
        >
          Download CV
        </ButtonLink>
      </div>
    </div>
  </div>
</section>