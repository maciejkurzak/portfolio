---
import { useSanityClient } from "astro-sanity";
import HtmlWrapper from "../../layouts/HtmlWrapper.astro";
import Navbar from "@/components/ui/Navbar";
import ProjectPost from "@/components/ui/ProjectPost";

const fetchPost = async () => {
  const post = await useSanityClient().fetch(`
    *[_type == "project" && slug.current == "${Astro.params.slug}"][0] {
      slug,
      asset,
      title,
      body,
      "imageUrl": mainImage.asset->url
    }
  `);

  return post;
};

const { title, body, description, imageUrl } = await fetchPost();

const seo = {
  title,
  description,
  image: imageUrl,
};
---

<HtmlWrapper seo={seo}>
  <Navbar client:only />
  <ProjectPost title={title} body={body} imageUrl={imageUrl} />
</HtmlWrapper>
